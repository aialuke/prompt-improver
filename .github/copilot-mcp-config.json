{
  "mcpServers": {
    "prompt-evaluation": {
      "type": "local",
      "command": "python",
      "args": ["-m", "src.prompt_improver.mcp_server.server"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}",
        "REDIS_URL": "${REDIS_URL}",
        "ENVIRONMENT": "development",
        "LOG_LEVEL": "INFO"
      },
      "description": "Prompt evaluation and improvement MCP server for analyzing and optimizing prompts using ML models and rule-based systems.",
      "capabilities": [
        "prompt_analysis",
        "improvement_suggestions",
        "quality_scoring",
        "rule_management",
        "performance_metrics",
        "database_queries"
      ]
    },
    "github-integration": {
      "type": "local",
      "command": "python",
      "args": ["-m", "mcp_server_github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "GITHUB_OWNER": "${GITHUB_OWNER}",
        "GITHUB_REPO": "${GITHUB_REPO:-prompt-improver}",
        "GITHUB_API_BASE_URL": "${GITHUB_API_BASE_URL:-https://api.github.com}"
      },
      "description": "GitHub integration for repository management, issue tracking, and automated workflows.",
      "capabilities": [
        "issue_management",
        "pull_request_operations",
        "repository_analysis",
        "workflow_automation",
        "code_review_assistance"
      ]
    },
    "database-postgresql": {
      "type": "local",
      "command": "python",
      "args": ["-m", "mcp_server_postgresql"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}",
        "POSTGRES_HOST": "${POSTGRES_HOST:-localhost}",
        "POSTGRES_PORT": "${POSTGRES_PORT:-5432}",
        "POSTGRES_USERNAME": "${POSTGRES_USERNAME}",
        "POSTGRES_PASSWORD": "${POSTGRES_PASSWORD}",
        "POSTGRES_DATABASE": "${POSTGRES_DATABASE}"
      },
      "description": "PostgreSQL database operations for schema analysis, query optimization, and data management.",
      "capabilities": [
        "schema_analysis",
        "query_execution",
        "performance_monitoring",
        "data_validation"
      ]
    },
    "observability-monitoring": {
      "type": "local",
      "command": "python",
      "args": ["-m", "mcp_server_observability"],
      "env": {
        "OTEL_EXPORTER_OTLP_ENDPOINT": "${OTEL_EXPORTER_OTLP_ENDPOINT:-http://localhost:4317}",
        "OTEL_SERVICE_NAME": "${OTEL_SERVICE_NAME:-prompt-improver}",
        "METRICS_ENDPOINT": "${METRICS_ENDPOINT:-http://localhost:8080/metrics}",
        "PROMETHEUS_ENDPOINT": "${PROMETHEUS_ENDPOINT:-http://localhost:9090}"
      },
      "description": "Observability and monitoring integration for performance analysis, metrics collection, and system health monitoring.",
      "capabilities": [
        "metrics_collection",
        "performance_analysis",
        "system_monitoring",
        "alerting_management"
      ]
    }
  }
}
