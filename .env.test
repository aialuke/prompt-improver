ENVIRONMENT=test
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=test-super-secret-key-for-integration-testing-32-chars-minimum
TEST_MODE=true

# ============================================================================
# Database Configuration (PostgreSQL) - Integration Test Settings
# ============================================================================
